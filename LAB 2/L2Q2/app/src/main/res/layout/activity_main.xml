<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="213dp"
        android:layout_height="60dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="46dp"
        android:hint="Enter text to encrypt"
        app:layout_constraintBottom_toTopOf="@+id/buttonEncrypt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEncrypt"
        android:layout_width="165dp"
        android:layout_height="57dp"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="65dp"
        android:text="Encrypt Text"
        app:layout_constraintBottom_toTopOf="@+id/editTextResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextInput"
        app:layout_constraintTop_toBottomOf="@+id/editTextInput" />

    <EditText
        android:id="@+id/editTextResult"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginBottom="366dp"
        android:hint="Encrypted Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonEncrypt"
        app:layout_constraintTop_toBottomOf="@+id/buttonEncrypt" />

</androidx.constraintlayout.widget.ConstraintLayout>
